<!-- app/views/articles/show.html.erb -->
<h2>Crea tu Comentario</h2>

<%= form_with(model: [@article, @comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :content, class:"form-label" %>
    <%= form.text_area :content, rows: 4, class:"form-control"  %>
  </div>
  <br>
  <div class="actions">
    <center><%= form.submit 'Add Comment', class:"btn btn-light" %>
  </div>
<% end %>
<br>

